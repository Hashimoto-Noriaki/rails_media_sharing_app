<div class="container">
    <div class="text-center mt-5">
        <h1><i class="fas fa-user-plus pr-3"></i>新規登録する</h1>
        <p class="lead">登録すると、コンテンツやチャンネルの作成、お気に入りのメディアを共有できます。</p>
    </div>
    <div class="row mt-5">
        <div class="col-md-4 offset-md-4">
            <%= form_with(model: @user, url: signup_post_path) do |f| %>
                <div class="form-group">
                    <%= f.label :name, "名前(ニックネームも可)" %>
                    <%= f.text_field :name, class: "form-control",placeholder: "例:ポン太君(登録後に変更可能です)"%>
                </div>
                <div class="form-group">
                    <%= f.label :email, "メールアドレス" %>
                    <%= f.email_field :email, class: "form-control",placeholder:"例:mail@gmail.com"%>
                </div>
                <div class="form-group">
                    <%= f.label :password, "パスワード(半角英数字)" %>
                    <%= f.password_field :password, class: "form-control",placeholder:"8文字以上の半角英数字"%>
                </div>
                <div class="form-group">
                    <%= f.label :password_confirmation, "パスワード確認(半角英数字)" %>
                    <%= f.password_field :password_confirmation, class: "form-control",placeholder:"8文字以上の半角英数字"%>
                </div>
                <%= f.submit "登録する", class: "btn btn-warning btn-block mt-3" %>
            <% end %>
            <div class="text-center mt-3">
                <%= link_to "ログインはこちら",new_user_session_path, class: 'nav-link'%>
            </div>
        </div>
    </div>
</div>
